# Docker Environment Configuration
# Copy this to .env and modify as needed before running docker-compose

# Application
APP_NAME="Kiosk Dashboard"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_URL=http://localhost:8080
APP_PORT=3000

# Set RUN_SEED=true only for first run or local; production should seed once via docker exec
# RUN_SEED=true

# Database (default: SQLite; must match docker-compose.yaml)
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/storage/app/database.sqlite

# For MySQL or PostgreSQL, override in .env and add the db service to compose:
# DB_CONNECTION=mysql
# DB_HOST=db
# DB_PORT=3306
# DB_DATABASE=kiosk_dashboard
# DB_USERNAME=kiosk
# DB_PASSWORD=secret

# Calendarific API (optional, for public holidays)
CALENDARIFIC_API_KEY=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Mail (required for password reset emails in production)
# MAIL_MAILER=smtp
# MAIL_HOST=
# MAIL_PORT=587
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_FROM_ADDRESS=
# MAIL_FROM_NAME="${APP_NAME}"
